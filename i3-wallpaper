#! /bin/bash
# i3-wallpaper v0.1
# part of github.com/DerZombiiie/setup

WALLPAPER="$HOME/wallpaper.png"
WALLPAPER_DIR="$HOME/.wallpaper/"

mkdir -p $WALLPAPER_DIR

case "$1" in
	"get")
		echo "Current Wallpaper:"
		echo -n "    "
		ls -lG --time-style "+" $HOME/wallpaper.png \
		| cut -d' ' -f8 \
		| rev \
		| cut -d'/' -f 1 | rev
		;;

	"set") 
		if ! [[ $2 ]]
		then
			echo "Usage: i3-wallpaper set <wallpaper>"
			exit 1
		fi

		FILE="$WALLPAPER_DIR$2"

		# check if file exists
		if ! test -f "$FILE"
		then
			echo "File '$FILE' does not exist"
			exit 1
		fi

		# set wallpaper
		ln -fs "$FILE" "$WALLPAPER"

		# restart i3
		i3-msg restart
		;;

	"list") 
		echo "Available Wallpapers:"
		cd $WALLPAPER_DIR
		find . \
		-maxdepth 1 \
		-printf "%f\n" \
		| cut -d'.' -f3- \
		| xargs -I {} echo "  - {}"		
		;;

	"add")
		if ! [[ $2 ]] || ! [[ $3 ]]
		then
			echo "Usage: i3-wallpaper add <file> <wallpaper-name>"
			exit 1
		fi	

		if ! test -f "$2"
		then
			echo "File '$2' does not exist"
			exit 1
		fi

		cp "$2" "$WALLPAPER_DIR$3"
		;;

	*) 
	echo "Usage: i3-wallpaper get | set | list | add"
	exit 1 
	;;
esac
